<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorGrey</item>
        <!-- white background activities -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/list_item_subtitle_size</item>
    </style>

    <style name="Error">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>
</resources>